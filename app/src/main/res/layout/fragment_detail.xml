<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
              android:orientation="vertical"
             tools:context="com.studyproject.fragment.DetailFragment">

<!--Title部分-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:background="#24C8FD">
        <ImageView
            android:id="@+id/iv_title_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/xc_d_chat_back"/>

        <TextView
            android:id="@+id/tv_title_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="活动详情"
            android:layout_toRightOf="@+id/iv_title_back"
            android:layout_marginLeft="30dp"
            android:textColor="#fff"/>

        <TextView
            android:id="@+id/tv_title_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="活动现场"
            android:layout_toRightOf="@+id/tv_title_text1"
            android:layout_marginLeft="70dp"
            android:textColor="#fff"/>

        <ImageView
            android:id="@+id/iv_title_share"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/huodongxianchang_fenxiang"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <!--活动名称图片-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:background="@drawable/fabuhuodong_99"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_alignParentBottom="true"
            android:text="活动名称"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:textColor="#fff"
            android:background="#80000000"/>
    </RelativeLayout>

<!--用户名-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:paddingRight="40dp">

        <!--圆形头像-->
        <ImageView
            android:id="@+id/iv_user_header"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
           android:background="#ffaa"/>
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:layout_centerVertical="true"
      android:paddingLeft="10dp"
      android:layout_toRightOf="@+id/iv_user_header"
      >
      <TextView
          android:id="@+id/tv_user_name"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="#000"
          android:text="用户名"
          android:ellipsize="end"
          android:textSize="14dp"
          android:singleLine="true"/>
      
      <LinearLayout
          android:layout_width="75dp"
          android:layout_height="25dp"
          android:orientation="horizontal"
          android:background="@drawable/huodongxiangqing_dianhuabeijing"
          android:layout_toRightOf="@+id/tv_user_name"
          android:layout_marginLeft="12dp"
          android:gravity="center_vertical"
          android:paddingLeft="3dp"
          android:paddingRight="3dp">

          <ImageView
              android:layout_width="30dp"
              android:layout_height="20dp"
              android:src="@drawable/huodongxiangqing_dianhua"/>
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="联系他"
              android:textColor="#fff"
              android:textSize="11dp"
              android:gravity="center"/>

      </LinearLayout>
      
      
      
      <TextView
          android:id="@+id/tv_user_intro"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="简介简介简介简介简介简介简介简介简介简介 简介 简介"
          android:layout_below="@+id/tv_user_name"
          android:layout_alignParentBottom="true"
          android:gravity="center"
          android:ellipsize="end"
          android:textSize="13dp"
          android:singleLine="true"/>

  </RelativeLayout>
    </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f2f2f2"></View>





        </LinearLayout>
    </ScrollView>
</LinearLayout>
